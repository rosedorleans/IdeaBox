<!DOCTYPE html>
<html lang="FR">
    <head>
        <meta charset="UTF-8">
        <title>
            IdeaBox | {% block title %}{% endblock %}
        </title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('style/style.css') }}">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock %}


    </head>
    <body>
        <nav class="navMenu">
            {% if app.user %}
                {# menu mobile #}
                <input type="checkbox" id="openmenu" class="hamburger-checkbox">
                <div class="hamburger-icon">
                    <label for="openmenu" id="hamburger-label">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                    </label>
                </div>
                <div class="menu-pane">
                    <nav>
                        <div class="navMenu--links_card-mobile">
                            <a href="{{ path('idea_index') }}">Toutes les idées</a>
                        </div>
                        <div class="navMenu--links_card-mobile">
                            <a href="{{ path('my_ideas') }}">Mes idées</a>
                        </div>
                    </nav>
                </div>

                {# menu laptop #}
                <div class="navMenu--links">
                    <div class="navMenu--links_card">
                        <a href="{{ path('idea_index') }}">Toutes les idées</a>
                    </div>
                    <div class="navMenu--links_card">
                        <a href="{{ path('my_ideas') }}">Mes idées</a>
                    </div>
                </div>
                <div class="navMenu--links_user flex">
                    <div class="navMenu--connected_name">
                        <img src="{{ asset('images/connected-icon.png') }}" alt="connected" height="15px">
                        <p class="connected">Connecté avec {{ app.user.pseudo }}</p>
                    </div>
                    <a href="{{ url('app_logout') }}" class="right connected connexion" id="deco">Déconnexion</a>
                </div>
            {% else %}
                <div class="flex">
                    <p class="right">Vous n'êtes pas connecté</p>
                    <a href="{{ path('app_login') }}" class="right connexion">Connexion</a>
                </div>
            {% endif %}
        </nav>
        <main class="main">
            {% block body %}{% endblock %}
        </main>
        {% block javascripts %}{% endblock %}
    </body>
</html>
