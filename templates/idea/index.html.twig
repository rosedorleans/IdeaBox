{% extends 'base.html.twig' %}

{% block title %}Idea index{% endblock %}

{% block body %}
    <h1>Idea index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for idea in ideas %}
            <tr>
                <td>{{ idea.id }}</td>
                <td>{{ idea.title }}</td>
                <td>{{ idea.description }}</td>
                <td>
                    <a href="{{ path('idea_show', {'id': idea.id}) }}">Afficher</a>
                    <a href="{{ path('idea_edit', {'id': idea.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucune idée toruvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('idea_new') }}">Ajouter une idée</a>
{% endblock %}
