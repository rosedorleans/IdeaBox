{% extends 'base.html.twig' %}

{% block title %}Idea{% endblock %}

{% block body %}
    <div class="main--ideas_show">
        <h1>Idea</h1>
        <div class="main--ideas_main">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ idea.title }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ idea.description }}</td>
                    </tr>
                    <tr>
                        <th>Auteur</th>
                        <td>{{ idea.author }}</td>
                    </tr>
                </tbody>
            </table>



            <a href="{{ path('idea_edit', {'id': idea.id}) }}">Modifier</a>

            {{ include('idea/_delete_form.html.twig') }}
        </div>
        <button class="main--ideas_return">
            <a href="{{ path('idea_index') }}">Retour aux id√©es</a>
        </button>

    </div>

{% endblock %}
